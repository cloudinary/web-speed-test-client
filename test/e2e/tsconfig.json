{
    "compilerOptions": {
        "types": ["node", "mocha", "webdriverio"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "outDir": "lib/"
    },
    
    "compileOnSave": false
}
